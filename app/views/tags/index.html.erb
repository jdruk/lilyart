<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= image_tag tag.photo.thumb.url if tag.photo? %></td>
        <td>
          <%= link_to tag do %>
            <i class="material-icons">insert_chart</i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_tag_path(tag) do %>
            <i class="material-icons">mode_edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to  tag, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja excluir?' } do %>
            <i class="material-icons red-text">warning</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %>
