<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Widht</th>
      <th>Height</th>
      <th>Length</th>
      <th>Descriptio</th>
      <th>Abstract</th>
      <th>Photo</th>
      <th>Photo gallery</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.weight %></td>
        <td><%= item.widht %></td>
        <td><%= item.height %></td>
        <td><%= item.length %></td>
        <td><%= item.descriptio %></td>
        <td><%= item.abstract %></td>
        <td><%= item.photo %></td>
        <td><%= item.photo_gallery %></td>
        <td><%= item.status %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

