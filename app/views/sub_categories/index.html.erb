<p id="notice"><%= notice %></p>

<h1>Subcategorias</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Foto</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.name %></td>
        <td><%= image_tag sub_category.photo_sub_category.thumb.url if sub_category.photo_sub_category? %></td>
        <td><%= sub_category.description %></td>
        <td>
          <%= link_to category_sub_category_path(@category,sub_category) do  %>
            <i class="material-icons">insert_chart</i>
          <% end %>
        </td>
        <td>
          <%= link_to  edit_category_sub_category_path(@category,sub_category) do  %>
            <i class="material-icons">mode_edit</i>
          <% end %>
        </td>
        <td>
          <%= link_to category_sub_category_path(@category, sub_category), method: :delete, data: { confirm: "Você tem certeza que deseja excluir a subcategoria #{sub_category.name}"} do  %>
            <i class="material-icons red-text">warning</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_category_sub_category_path(@category) do  %>
  <i class="medium material-icons">add</i>
<% end %>
